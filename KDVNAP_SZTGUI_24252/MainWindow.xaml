<Window x:Class="KDVNAP_SZTGUI_24252.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDVNAP_SZTGUI_24252"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <Button Height="30" Margin="0, 5, 0, 5" Content="Start"/>
            <Button Height="30" Margin="0, 5, 0, 5" Content="Statistics"/>
            <Button Height="30" Margin="0, 5, 0, 5" Content="New Set"/>
            <Button Height="30" Margin="0, 5, 0, 5" Content="Edit Current Set"/>
            <ComboBox x:Name="comboBox" Margin="10">

            </ComboBox>

        </StackPanel>

        <Grid Grid.Column="1">
            <TextBox BorderBrush="Black" BorderThickness="2pt" Margin="50, 100" FontSize="32" FontWeight="Bold" TextAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Button Grid.Column="0" Grid.Row="1" Margin="20, 8, 20, 8" Content="Close"></Button>
        <ProgressBar Grid.Column="1" Grid.Row="1" Margin="20, 10, 20, 10"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>


    </Grid>
</Window>
